// Online C compiler to run C program online
#include <stdio.h>

int main() {
    // Write C code here
    int a[3] = {10,20,30};
    printf("sizeof(a[0])=%u\n",sizeof(a[0]));
    printf("sizeof(a)=%u\n",sizeof(a));
    printf("a=%u\n",a);       //address print hoga first element ka
    printf("a+1=%u\n",a+1);     //address of a[0] + 1*sizeof(a[0])
    printf("&a=%u\n",&a);     //ampersand ke saath poora array ka naam to array object ki tarah treat hoga
    printf("&a[0]=%u\n",&a[0]);
    printf("&a[0]+1=%u\n",&a[0]+1);
    printf("&a+1=%u\n",&a+1);
    return 0;
}
